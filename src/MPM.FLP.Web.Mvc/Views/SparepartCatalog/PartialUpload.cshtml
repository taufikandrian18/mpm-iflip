@model MPM.FLP.FLPDb.ProductCatalogs

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="body">
            @using (Html.BeginForm("UploadDocument", "SparepartCatalog", FormMethod.Post))
            {
                <div class="form-group">
                    <label class="control-label"> Dokumen </label>
                    <br />
                    @(Html.Kendo().Upload()
                        .Name("files")
                        .Multiple(false)
                        .Validation(validation => validation.AllowedExtensions(new string[] { ".pdf", ".xlsx", ".xls", ".doc", ".docx" }))
                    )
                    <input asp-for="Id" hidden />
                </div>
                <div class="form-group">
                    <button type="submit" value="Create" class="btn btn-primary">Tambahkan</button>
                </div>
            }
        </div>
    </div>
</div>
