@model MPM.FLP.FLPDb.SalesTalks

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>Tambah Sales Talk Baru</h2>
            </div>
            <div class="body">
                <form id="form" asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label><br />
                        <input asp-for="Title" class="k-textbox" style="width:100%" required/>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Contents" class="control-label"></label><br />
                        <input asp-for="Contents" class="k-textbox" />
                        <span asp-validation-for="Contents" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StartDate" class="control-label"></label>
                        <br />
                        <kendo-datepicker for="StartDate" value="@DateTime.Now" />
                        @*<input asp-for="StartDate" type="date" class="form-control" />*@
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EndDate" class="control-label"></label>
                        <br />
                        <kendo-datepicker for="EndDate" value="@DateTime.Now" />
                        @*<input asp-for="EndDate" type="date" class="form-control" />*@
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label"> Image </label>
                        <br />
                        @(Html.Kendo().Upload()
                            .Name("files")
                            .Validation(validation => validation.AllowedExtensions(new string[] { ".jpeg", ".jpg", ".png" }))
                        )
                        @*<input asp-for="EndDate" type="date" class="form-control" />*@
                    </div>
                    <div class="form-group">
                        <label asp-for="IsPublished" class="control-label"></label>
                        <div class="checkbox">
                            <div class="switch">
                                <label>OFF<input asp-for="IsPublished" type="checkbox" checked=""><span class="lever"></span>ON</label>
                            </div>
                        </div>
                        <span asp-validation-for="IsPublished" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" value="Create" class="btn btn-primary">Create</button>
                        <button asp-action="Index" class="btn btn-default">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
        
        
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


