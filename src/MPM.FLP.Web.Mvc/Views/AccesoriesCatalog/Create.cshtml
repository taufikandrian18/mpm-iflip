@model MPM.FLP.FLPDb.AccesoriesCatalogs

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>Tambah Katalog Aksesoris Baru</h2>
            </div>
            <div class="body">
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                        <form id="form" asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Title" class="control-label">Judul</label><br />
                                <input asp-for="Title" class="k-textbox" style="width:100%" required />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price" class="control-label">Harga</label><br />
                                <input asp-for="Price" class="k-textbox" style="width:100%" type="number" onkeydown="javascript: return event.keyCode === 8 || event.keyCode === 46 ? true : !isNaN(Number(event.key))" min="0" value="0" required />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Order" class="control-label">Urutan</label><br />
                                <input asp-for="Order" type="number" onkeydown="javascript: return event.keyCode === 8 || event.keyCode === 46 ? true : !isNaN(Number(event.key))" class="k-textbox" style="width:100%" min="1" value="1" />
                                <span asp-validation-for="Order" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label"> Gambar </label>
                                <br />
                                @(Html.Kendo().Upload()
                                    .Name("files")
                                    .Validation(validation => validation.AllowedExtensions(new string[] { ".jpeg", ".jpg", ".png" }))
                                )
                                @*<input asp-for="EndDate" type="date" class="form-control" />*@
                            </div>
                            <div class="form-group">
                                <label asp-for="IsPublished" class="control-label">Tampilkan ?</label>
                                <div class="checkbox">
                                    <div class="switch">
                                        <label>OFF<input asp-for="IsPublished" type="checkbox" checked=""><span class="lever"></span>ON</label>
                                    </div>
                                </div>
                                <span asp-validation-for="IsPublished" class="text-danger"></span>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
            <div class="footer">
                <div class="form-group">
                    <button type="submit" value="Create" class="btn btn-primary" onclick="submitForm()">Buat</button>
                    <button class="btn btn-default" onclick="backToIndex()">Kembali</button>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    function submitForm() {
        $("#form").submit();
    }
    function backToIndex() {
        window.history.back();
    }
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


